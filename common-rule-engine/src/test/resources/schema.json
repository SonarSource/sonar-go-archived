{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "token": {
      "id":"token",
      "description": "Token from original UAST",
      "type":"object",
      "properties": {
        "value": {"type":"string"},
        "line": {"type":"number"},
        "endLine": {"type":"number"},
        "column": {"type":"number"},
        "endColumn": {"type":"number"}
      },
      "required":[ "value", "line", "endLine", "column", "endColumn"]
    }
  },
  "id":"uastNode",
  "description": "Node from uast",
  "type":"object",
  "properties": {
    "kinds" : {
      "type":"array",
      "items" : {"type" : "string"}
    },
    "nativeNode" : {"type":"string"},
    "token" : { "$ref": "#/definitions/token"},
    "children" : {
      "type":"array",
      "items" : {"$ref": "#/definitions/uastNode"}
    }
  },
  "required" : ["kinds", "nativeNode", "children"]
}
